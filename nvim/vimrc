set mouse=a
set number
set relativenumber
set wildignorecase
set noshowmode
set confirm                "Ask to save stuff
set hidden                 "Hides buffers instead of closing them
set fileencoding=utf-8     "Encoding written to file
let g:netrw_dirhistmax = 0 "No netrw history

""" SPLIT WINDOWS
set splitright
set splitbelow

""" POSITION
set cursorline
set cursorcolumn
set colorcolumn=81

""" SEARCH
set ignorecase
set smartcase

""" WHITESPACE
set list
set listchars=tab:\|-,trail:*,extends:>,precedes:<,nbsp:_ "eol:~
set listchars+=space:Â· "not ASCII

""" INDENTATION
set smartindent
set expandtab    "<tab> inserts spaces
set tabstop=4
set shiftwidth=4
set softtabstop=4

""" FOLDS
set foldmethod=indent
set foldlevel=2

""" SCROLLING
set nowrap
set scrolloff=20    "Keeps cursor centred
set sidescrolloff=20

""" VIM 8
if !has('nvim')
  syntax on
  colorscheme desert
  set ruler
  set showcmd
  set autoread
  set wildmenu
  set hlsearch
  set incsearch
  set autoindent
  """ status line
  set laststatus=2
  set stl=%f          "relative path
  set stl+=%m%r%h%w   "flags: modified, read-only, help, preview
  set stl+=%=         "separator
  set stl+=%y         "syntax
  set stl+=%{&fenc}\| "encoding
  set stl+=%{&ff}\|   "format
  set stl+=\ %p%%     "percentage through file
  set stl+=\ %3l:%3c  "current line and column
endif

